// Enable tmux-like scrollback
keybinds {
    // Keep scroll mode with arrow key navigation
    scroll {
        bind "Ctrl c" { ScrollToBottom; SwitchToMode "Normal"; }
        bind "q" { SwitchToMode "Normal"; }
        bind "Esc" { SwitchToMode "Normal"; }
        bind "Enter" { SwitchToMode "Normal"; }
        
        // Arrow key navigation in scroll mode
        bind "Down" { ScrollDown; }
        bind "Up" { ScrollUp; }
        bind "PageDown" { PageScrollDown; }
        bind "PageUp" { PageScrollUp; }
        bind "Ctrl Down" { HalfPageScrollDown; }
        bind "Ctrl Up" { HalfPageScrollUp; }
        bind "Home" { ScrollToTop; }
        bind "End" { ScrollToBottom; }
    }

    shared_except "locked" {
        // Don't shift between tabs.
        bind "Alt h" "Alt Left" { MoveFocus "Left"; }
        bind "Alt l" "Alt Right" { MoveFocus "Right"; }
    }
}

themes {
    base16-eighties {
        fg "#d3d0c8"
        bg "#515151"
        black "#2d2d2d"
        red "#f2777a"
        green "#99cc99"
        yellow "#ffcc66"
        blue "#6699cc"
        magenta "#cc99cc"
        cyan "#66cccc"
        white "#d3d0c8"
        orange "#f99157"
    }
}

copy_command "pbcopy"
default_layout "main"
theme "base16-eighties"

mouse_mode true
